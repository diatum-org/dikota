<ActionBar *ngIf="iOS" backgroundColor="#CDD8ED" class="text" title="Create an Account">
  <NavigationButton></NavigationButton>
</ActionBar>
<ActionBar *ngIf="!iOS" backgroundColor="#CDD8ED" class="text">
  <GridLayout columns="48,*,48" backgroundColor="#CDD8ED">
    <Image col="0" src="~/assets/iarrow.png" width="48" height="48" translateX="-4" (tap)="onBack()"></Image>
    <Label col="1" text="Create an Account" fontWeight="Bold" fontSize="18" horizontalAlignment="left" verticalAlignment="center"
        paddingLeft="8"></Label>
  </GridLayout>
</ActionBar>

<GridLayout rows="64,*,*,64" paddingLeft="16" paddingRight="16" background="#FFFFFF">
  <Label row="0" class="text" text="Welcome!" verticalAlignment="bottom" fontSize="16" fontWeight="Bold" paddingBottom="8"></Label>
  <Label row="1" class="text" text="The Dikota app was created by Diatum, a nonprofit with big ideas to safeguard your data and privacy. Thanks for joining the community."
      textWrap="true" fontSize="15" verticalAlignment="top"></Label>
  <GridLayout row="2" columns="*,2*,*">
    <Image col="1" src="~/assets/banner.png" verticalAlignment="top"></Image>
  </GridLayout>
  <Label row="3" class="link" text="NEXT" fontWeight="Bold" verticalAlignment="top" horizontalAlignment="center" (tap)="onNext()"></Label>
</GridLayout>

