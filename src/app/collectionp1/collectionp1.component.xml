<ActionBar backgroundColor="#cdd8ed">
  <NavigationButton visibility="collapsed"></NavigationButton>
  <GridLayout width="95%" columns="3*,*">
    <StackLayout orientation="horizontal" horizontalAlignment="left">
      <Image width="40" height="40" src="~/assets/back.png" stretch="aspectFit" (tap)="goBack()"></Image>
      <Label text="Location" class="text" fontWeight="Bold" fontSize="18" paddingLeft="32"
          verticalAlignment="center"></Label>
    </StackLayout>
    <Label col="1" class="link" text="NEXT" fontSize="18" paddingRight="16"
        verticalAlignment="center" horizontalAlignment="right" (tap)="onNext()"></Label>
  </GridLayout>
</ActionBar>

<GridLayout backgroundColor="#ffffff">
  <ScrollView>
    <StackLayout padding="16">

      <Label class="text" fontSize="26" textAlignment="center" paddingTop="8" fontWeight="Bold" text="Location"></Label>
      <Label class="text" fontSize="20" textAlignment="center" padding="4" paddingBottom="24" text="Identifying Data Collection"></Label>

      <Label class="text" fontSize="18" textWrap="true">
        <Span text="If you use the optional "></Span>
        <Span fontWeight="Bold" text="Find Nearby Users"></Span>
        <Span text=" service, the GPS location coordinate data and your Digital Identity is temporarily stored in a separate Diatum registry to enable the feature. The location service is disabled after 5 minutes and the data is no longer used"></Span>
      </Label>

      <Label class="text" fontSize="18" paddingTop="16" textWrap="true" text="Diatum does not utilize this collected data for any purpose other than to provide the Find Nearby Users service."></Label>
    </StackLayout>
  </ScrollView>
</GridLayout>
