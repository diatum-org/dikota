<ActionBar backgroundColor="#cdd8ed">
  <NavigationButton visibility="collapsed"></NavigationButton>
  <GridLayout width="95%" columns="3*,*">
    <StackLayout orientation="horizontal" horizontalAlignment="left">
      <Image width="40" height="40" src="~/assets/back.png" stretch="aspectFit" (tap)="goBack()"></Image>
      <Label text="Permissions" class="text" fontWeight="Bold" fontSize="18" paddingLeft="32"
          verticalAlignment="center"></Label>
    </StackLayout>
    <Label col="1" class="link" text="NEXT" fontSize="18" paddingRight="16"
        verticalAlignment="center" horizontalAlignment="right" (tap)="onNext()"></Label>
  </GridLayout>
</ActionBar>

<GridLayout backgroundColor="#ffffff">
  <ScrollView>
    <StackLayout padding="16">

      <Label class="text" fontSize="18" textWrap="true" paddingTop="16"
          text="Beacuse we're on a mission to empower your privacy rights, we've tried to make the permission clearer and more specific than the vague descriptions normally used in apps."></Label>

      <Label class="text" fontSize="18" textWrap="true" paddingTop="16">
        <Span fontWeight="Bold" text="What is a permission?"></Span>
        <Span text=" A permission allows Dikota to use a functionality of your device to provide a service - such as using the phone's location to find nearby users. All device permissions are optional and can be approved or denied in your device settings at any time."></Span>
      </Label>
    
    </StackLayout>
  </ScrollView>
</GridLayout>
