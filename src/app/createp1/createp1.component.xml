<ActionBar *ngIf="iOS" backgroundColor="#CDD8ED" class="text" title="Email">
  <NavigationButton></NavigationButton>
</ActionBar>
<ActionBar *ngIf="!iOS" backgroundColor="#CDD8ED" class="text">
  <GridLayout columns="48,*,48" backgroundColor="#CDD8ED">
    <Image col="0" src="~/assets/iarrow.png" width="48" height="48" translateX="-4" (tap)="onBack()"></Image>
    <Label col="1" text="Email" fontWeight="Bold" fontSize="18" horizontalAlignment="left" verticalAlignment="center"
        paddingLeft="8"></Label>
  </GridLayout>
</ActionBar>

<GridLayout background="#FFFFFF" [rows]="getScreenGrid()">
  <GridLayout rows="2*,auto,2*,5*" paddingLeft="32" paddingRight="32">
    <Label *ngIf="email!=null&&email!=''" row="0" color="#909097" text="Email" verticalAlignment="bottom" fontSize="16"></Label>
    <TextField row="1" color="#51515E" style.placeholderColor="#A1A1AE" class="input" autocorrect="false" hint="Email" fontSize="16" 
        autocapitalizationType="none" verticalAlignment="top" textWrap="true" [text]="email" (textChange)="onSetEmail($event.value)"
        (focus)="onFocus()" (blur)="onBlur()" borderBottomWidth="1" [borderColor]="emailBorder" paddingTop="4"></TextField>
    <Label *ngIf="emailBorder!='#DDDDDD'" row="1" color="#ED5A56" fontSize="12" text="(not available)" horizontalAlignment="right" paddingRight="8"></Label>
    <Label row="2" text="NEXT" fontWeight="Bold" fontSize="16" verticalAlignment="top" paddingTop="32" 
        textAlignment="center" [color]="nextColor" (tap)="onNext()"></Label>
    <Label row="3" class="link" text="Sign up with mobile number" fontSize="16" paddingLeft="16" paddingRight="16"
        verticalAlignment="middle" textAlignment="center" (tap)="onPhone()"></Label>
  </GridLayout>
</GridLayout>
