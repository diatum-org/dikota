<ActionBar *ngIf="iOS" backgroundColor="#CDD8ED" class="text" title="Permissions">
  <NavigationButton></NavigationButton>
</ActionBar>
<ActionBar *ngIf="!iOS" backgroundColor="#CDD8ED" class="text">
  <GridLayout columns="48,*,48" backgroundColor="#CDD8ED">
    <Image col="0" src="~/assets/iarrow.png" width="48" height="48" translateX="-4" (tap)="onBack()"></Image>
    <Label col="1" text="Permissions" fontWeight="Bold" fontSize="18" horizontalAlignment="left" verticalAlignment="center"
        paddingLeft="8"></Label>
  </GridLayout>
</ActionBar>

<GridLayout rows="32,*,32" background="#FFFFFF">
  <ScrollView row="1">
    <StackLayout>
      <Label text="Location" class="text" fontSize="18" fontWeight="Bold" horizontalAlignment="center" paddingLeft="16" paddingRight="16"></Label>
      <Label text="Permission" class="text" fontSize="18" fontWeight="Bold" horizontalAlignment="center" paddingLeft="16" paddingRight="16"></Label>
      <Label class="text" text="When you use our Find Nearby Users function, we need permission to access your phone's GPS location." fontSize="16" textWrap="true" paddingTop="16" paddingLeft="16" paddingRight="16"></Label>
      <Label text="A message will appear to confirm the permission." fontSize="16" textWrap="true" paddingTop="16" paddingLeft="16" paddingRight="16"></Label>

      <StackLayout backgroundColor="#CDD8EA" orientation="horizontal" marginTop="16" paddingTop="4" paddingBottom="8" paddingLeft="16" paddingRight="16" (tap)="allow=!allow">
          <Image *ngIf="!allow" translateX="-4" src="~/assets/wadd.png" width="32" verticalAlignment="top"></Image>
          <Label *ngIf="allow" text="-" translateY="-4" width="32" fontSize="32" color="#FFFFFF" paddingRight="16" verticalAlignment="top"></Label>
          <StackLayout paddingTop="8">
            <Label text="What 'Allow' permits" class="text" fontSize="16" fontWeight="Bold"></Label>
            <Label *ngIf="allow" text="Gives access to Dikota to use your phone's GPS Location feature." textWrap="true" fontSize="16" class="text" paddingTop="8" paddingBottom="8"></Label>
            <Label *ngIf="allow" text="Dikota can now turn on your location to temporarily find and store your physical location to enable the Find Nearby Users function. Your location reporting is turned off after 5 minutes" textWrap="true" fontSize="16" class="text"></Label>
          </StackLayout>
      </StackLayout>

      <StackLayout backgroundColor="#CDD8EA" orientation="horizontal" marginTop="16" paddingTop="4" paddingBottom="8" paddingLeft="16" paddingRight="16" (tap)="nallow=!nallow">
          <Image *ngIf="!nallow" translateX="-4" src="~/assets/wadd.png" width="32" verticalAlignment="top"></Image>
          <Label *ngIf="nallow" text="-" translateY="-4" width="32" fontSize="32" color="#FFFFFF" paddingRight="16" verticalAlignment="top"></Label>
          <StackLayout paddingTop="8">
            <Label text="What 'Allow' does not permit" class="text" fontSize="16" fontWeight="Bold"></Label>
            <Label *ngIf="nallow" text="Does not permit Dikota to utilize your location data in any other way. Your location data and history remains private and under your control." textWrap="true" fontSize="16" class="text" paddingTop="8" paddingBottom="8"></Label>
          </StackLayout>
      </StackLayout>

      <StackLayout backgroundColor="#CDD8EA" orientation="horizontal" marginTop="16" paddingTop="4" paddingBottom="8" paddingLeft="16" paddingRight="16" (tap)="deny=!deny">
          <Image *ngIf="!deny" translateX="-4" src="~/assets/wadd.png" width="32" verticalAlignment="top"></Image>
          <Label *ngIf="deny" text="-" translateY="-4" width="32" fontSize="32" color="#FFFFFF" paddingRight="16" verticalAlignment="top"></Label>
          <StackLayout paddingTop="8">
            <Label text="What 'Deny' means for you" class="text" fontSize="16" fontWeight="Bold"></Label>
            <Label *ngIf="deny" text="Deny this permission and the app will still function, but Dikota will not have the capability to temporarily find nearby users." textWrap="true" fontSize="16" class="text" paddingTop="8" paddingBottom="8"></Label>
          </StackLayout>
      </StackLayout>

    </StackLayout>
  </ScrollView>
  <Label row="2" class="link" text="NEXT" fontWeight="Bold" verticalAlignment="top" horizontalAlignment="center" (tap)="onNext()"></Label>
</GridLayout>

