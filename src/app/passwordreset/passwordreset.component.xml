<ActionBar *ngIf="iOS" backgroundColor="#CDD8ED" class="text" title="Reset Password">
  <NavigationButton></NavigationButton>
</ActionBar>
<ActionBar *ngIf="!iOS" backgroundColor="#CDD8ED" class="text">
  <GridLayout columns="48,*,48" backgroundColor="#CDD8ED">
    <Image col="0" src="~/assets/iarrow.png" width="48" height="48" translateX="-4" (tap)="onBack()"></Image>
    <Label col="1" text="Reset Password" fontWeight="Bold" fontSize="18" horizontalAlignment="left" verticalAlignment="center"
        paddingLeft="8"></Label>
  </GridLayout>
</ActionBar>

<GridLayout backgroundColor="#FFFFFF">
  <GridLayout *ngIf="!done" rows="auto,auto,*" paddingRight="32" paddingLeft="32">

    <StackLayout row="0" verticalAlignment="center" paddingTop="32" paddingBottom="32">
      <Label row="0" class="text" fontSize="18" textWrap="true" 
          text="Enter your account phone number or email address and we'll send you a link to reset your password."></Label> 
    </StackLayout>

    <GridLayout row="1" verticalAlignment="center" rows="auto" paddingBottom="16">
      <Image src="~/assets/login.png" height="28" width="28" horizontalAlignment="left" verticalAlignment="center"></Image>
      <TextField color="#51512E" style.placeholderColor="#A1A1AE" class="input" autocorrect="false"  fontSize="16"
          paddingLeft="32" hint="Phone / Email" autocapitalizationType="none" (textChange)="onUpdate($event.value)" 
          returnKeyType="next" borderBottomWidth="1" borderColor="#DDDDDD"></TextField>
    </GridLayout>    

    <GridLayout row="2" verticalAlignment="top">
      <ActivityIndicator color="#1172FE" [busy]="busy" marginTop="4" marginBottom="4" width="32"
          height="32"></ActivityIndicator>
      <Label text="RESET PASSWORD" verticalAlignment="center" fontSize="16" fontWeight="Bold"
          paddingTop="64" textAlignment="center" [color]="resetColor" (tap)="onReset()"></Label>
    </GridLayout>

  </GridLayout>

  <GridLayout *ngIf="done" rows="*,*,*" paddingRight="32" paddingLeft="32">

    <StackLayout row="0" verticalAlignment="center" paddingTop="16">
      <Label class="text" fontSize="18" horizontalAlignment="center" fontWeight="Bold" 
          text="Help is on the way"></Label> 
      <Label class="text" fontSize="16" horizontalAlignment="center" paddingTop="32"
          text="We sent your password reset instructions to:" textWrap="true"></Label> 
      <Label class="text" fontSize="16" horizontalAlignment="center" paddingTop="32"
          [text]="contact"></Label> 
    </StackLayout>

    <Label row="1" class="text" verticalAlignment="center" horizontalAlignment="center" textWrap="true" fontSize="16"
        text="Check your spam or junk folder if you don't see it."></Label>

    <GridLayout row="2" verticalAlignment="top">
      <Label text="RETURN TO LOGIN" verticalAlignment="center" fontSize="16" fontWeight="Bold"
          paddingTop="64" textAlignment="center" [color]="resetColor" (tap)="onBack()"></Label>
    </GridLayout>

  </GridLayout>
</GridLayout>

