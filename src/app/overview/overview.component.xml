<ActionBar *ngIf="iOS" backgroundColor="#CDD8ED" class="text" title="Privacy Overview">
  <NavigationButton></NavigationButton>
</ActionBar>
<ActionBar *ngIf="!iOS" backgroundColor="#CDD8ED" class="text">
  <GridLayout columns="48,*,48" backgroundColor="#CDD8ED">
    <Image col="0" src="~/assets/iarrow.png" width="48" height="48" translateX="-16" (tap)="onBack()"></Image>
    <Label col="1" text="Privacy Overview" fontWeight="Bold" fontSize="18" horizontalAlignment="left" verticalAlignment="center"
        paddingLeft="8"></Label>
  </GridLayout>
</ActionBar>

<GridLayout backgroundColor="#ffffff">
  <ScrollView>
    <StackLayout>

      <GridLayout columns="2*,3*" borderBottomWidth="1" borderColor="#dddddd" backgroundColor="#ffffff" padding="8">
        <Label col="0" fontSize="18" class="text" text="Creator" verticalAlignment="top"></Label>
        <Label col="1" fontSize="18" class="text" text="Dikota" verticalAlignment="top"></Label>
      </GridLayout>

      <GridLayout columns="2*,3*" borderBottomWidth="1" borderColor="#dddddd" backgroundColor="#f8f8f8" padding="8">
        <Label col="0" fontSize="18" class="text" text="Price" verticalAlignment="top"></Label>
        <Label col="1" fontSize="18" class="text" text="No Charge" verticalAlignment="top"></Label>
      </GridLayout>

      <GridLayout columns="2*,3*" borderBottomWidth="1" borderColor="#dddddd" backgroundColor="#ffffff" padding="8">
        <Label col="0" fontSize="18" class="text" text="Included" verticalAlignment="top"></Label>
        <Label col="1" fontSize="18" class="text" verticalAlignment="top" textWrap="true"
            text="Connect with friends and family."></Label>
      </GridLayout>

      <GridLayout columns="2*,3*" borderBottomWidth="1" borderColor="#dddddd" backgroundColor="#f8f8f8" padding="8">
        <Label col="0" fontSize="18" class="text" text="In-app purchases" verticalAlignment="top" textWrap="true"></Label>
        <Label col="1" fontSize="18" class="text" text="None" verticalAlignment="top"></Label>
      </GridLayout>

      <GridLayout columns="2*,3*" borderBottomWidth="1" borderColor="#dddddd" backgroundColor="#ffffff" padding="8">
        <Label col="0" fontSize="18" class="text" text="Ads" verticalAlignment="top"></Label>
        <Label col="1" fontSize="18" class="text" text="None" verticalAlignment="top"></Label>
      </GridLayout>

      <GridLayout columns="2*,3*" borderBottomWidth="1" borderColor="#dddddd" backgroundColor="#f8f8f8" padding="8">
        <Label col="0" fontSize="18" class="text" text="Identifying Data Collection" 
            verticalAlignment="top" textWrap="true"></Label>
        <StackLayout col="1" borderWidth="1" borderRadius="4" borderColor="#dddddd" verticalAlignment="top">
          <Label fontSize="18" class="text" textWrap="true" paddingTop="8" paddingLeft="8" backgroundColor="#f8f8f8"
              fontWeight="Bold" text="Location"></Label>
          <Label fontSize="18" class="text" textWrap="true" paddingLeft="8" backgroundColor="#f8f8f8"
              text="(Optional, Temporary)"></Label>
          <Label class="link" fontSize="16" textWrap="true" borderBottomWidth="1" borderColor="#dddddd" 
              padding="8" text="Purpose"></Label>
          <Label class="text" fontSize="18" textWrap="true" borderBottomWidth="1" borderColor="#dddddd" 
              padding="8" text="App Functionality" backgroundColor="#ffffff"></Label>
          <Label class="link" fontSize="16" textWrap="true" borderBottomWidth="1" borderColor="#dddddd"
              padding="8" text="Source"></Label>
          <Label class="text" fontSize="18" textWrap="true" borderBottomWidth="1" borderColor="#dddddd"
              padding="8" text="Phone Location Services" backgroundColor="#ffffff"></Label>
          <Label fontSize="18" class="text" textWrap="true" paddingTop="8" paddingLeft="8" backgroundColor="#f8f8f8"
              fontWeight="Bold" text="User Directory Profile"></Label>
          <Label fontSize="18" class="text" textWrap="true" paddingLeft="8" backgroundColor="#f8f8f8"
              text="(Opt-in)"></Label>
          <Label class="link" fontSize="16" textWrap="true" borderBottomWidth="1" borderColor="#dddddd" 
              padding="8" text="Purpose"></Label>
          <Label class="text" fontSize="18" textWrap="true" borderBottomWidth="1" borderColor="#dddddd" 
              padding="8" text="App Functionality" backgroundColor="#ffffff"></Label>
          <Label class="link" fontSize="16" textWrap="true" borderBottomWidth="1" borderColor="#dddddd"
              padding="8" text="Source"></Label>
          <Label class="text" fontSize="18" textWrap="true" borderBottomWidth="1" borderColor="#dddddd"
              padding="8" text="Diatabase" backgroundColor="#ffffff"></Label>
        </StackLayout>
      </GridLayout>

      <GridLayout columns="2*,3*" borderBottomWidth="1" borderColor="#dddddd" backgroundColor="#ffffff" padding="8">
        <Label col="0" fontSize="18" class="text" text="Identity Tracking" verticalAlignment="top" textWrap="true"></Label>
        <Label col="1" fontSize="18" class="text" text="None" verticalAlignment="top"></Label>
      </GridLayout>

      <GridLayout columns="2*,3*" borderBottomWidth="1" borderColor="#dddddd" backgroundColor="#f8f8f8" padding="8">
        <Label col="0" fontSize="18" class="text" text="Required Permissions" verticalAlignment="top" textWrap="true"></Label>
        <StackLayout col="1" borderWidth="1" borderRadius="4" borderColor="#dddddd" verticalAlignment="top">
          <Label class="text" fontSize="18" fontWeight="Bold" paddingLeft="8" paddingTop="8" text="1. Digital Identity"></Label>
          <Label class="text" fontSize="18" fontWeight="Bold" paddingLeft="8" text="2. Contacts"></Label>
          <Label class="text" fontSize="18" fontWeight="Bold" paddingLeft="8" text="3. Labels"></Label>
          <Label class="link" fontSize="16" textWrap="true" borderBottomWidth="1" borderColor="#dddddd" 
              padding="8" text="Purpose"></Label>
          <Label class="text" fontSize="18" textWrap="true" borderBottomWidth="1" borderColor="#dddddd" 
              padding="8" text="App Functionality" backgroundColor="#ffffff"></Label>
          <Label class="link" fontSize="16" textWrap="true" borderBottomWidth="1" borderColor="#dddddd"
              padding="8" text="Source"></Label>
          <Label class="text" fontSize="18" textWrap="true" borderBottomWidth="1" borderColor="#dddddd"
              padding="8" text="Diatabase" backgroundColor="#ffffff"></Label>
        </StackLayout>
      </GridLayout>

      <GridLayout columns="2*,3*" borderBottomWidth="1" borderColor="#dddddd" backgroundColor="#ffffff" padding="8">
        <Label col="0" fontSize="18" class="text" text="Required Permissions" verticalAlignment="top" textWrap="true"></Label>
        <StackLayout col="1" borderWidth="1" borderRadius="4" borderColor="#dddddd" verticalAlignment="top">
          <Label class="text" fontSize="18" fontWeight="Bold" paddingLeft="8" paddingTop="8" text="1. Location"
              backgroundColor="#f8f8f8"></Label>
          <Label class="text" fontSize="18" fontWeight="Bold" paddingLeft="8" text="2. Camera"
              backgroundColor="#f8f8f8"></Label>
          <Label class="text" fontSize="18" fontWeight="Bold" paddingLeft="8" text="3. Device Media"
              backgroundColor="#f8f8f8"></Label>
          <Label class="link" fontSize="16" textWrap="true" borderBottomWidth="1" borderColor="#dddddd" 
              padding="8" text="Purpose" backgroundColor="#f8f8f8"></Label>
          <Label class="text" fontSize="18" textWrap="true" borderBottomWidth="1" borderColor="#dddddd" 
              padding="8" text="App Functionality" backgroundColor="#ffffff"></Label>
          <Label class="link" fontSize="16" textWrap="true" borderBottomWidth="1" borderColor="#dddddd"
              padding="8" text="Source" backgroundColor="#f8f8f8"></Label>
          <Label class="text" fontSize="18" textWrap="true" borderBottomWidth="1" borderColor="#dddddd"
              padding="8" text="Device (Phone, Tablet)" backgroundColor="#ffffff"></Label>
        </StackLayout>
      </GridLayout>

    </StackLayout>
  </ScrollView>
</GridLayout>
