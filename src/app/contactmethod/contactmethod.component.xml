<ActionBar backgroundColor="#cdd8ed">
  <NavigationButton visibility="collapsed"></NavigationButton>
  <GridLayout width="95%" columns="*">
    <StackLayout orientation="horizontal" horizontalAlignment="left">
      <Image width="40" height="40" src="~/assets/back.png" stretch="aspectFit" (tap)="goBack()"></Image>
      <Label text="Diatum Communication" class="text" fontWeight="Bold" fontSize="18" paddingLeft="32"
          verticalAlignment="center"></Label>
    </StackLayout>
  </GridLayout>
</ActionBar>

<GridLayout backgroundColor="#ffffff">
  <ScrollView>
    <StackLayout padding="16">

      <Label class="text" fontSize="18" textWrap="true" paddingTop="16" text="We'd love to keep in touch with you about our mission and progress. Please subscribe on our website if you'd like to hear from us occasionally (no spam we promise)."></Label>

      <Label class="text" fontSize="18" textWrap="true" paddingTop="16" text="Your email address will not be associated with your Digital Identity by Diatum, and is collected with a third party customer service provider to facilitate communication."></Label>
   
      <Label class="link" fontWeight="Bold" paddingTop="32" fontSize="18" textAlignment="center" text="Diatum Communication" (tap)="onCommunication()"></Label>
 
    </StackLayout>
  </ScrollView>
</GridLayout>
