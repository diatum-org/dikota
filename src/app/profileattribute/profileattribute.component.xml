<ActionBar backgroundColor="#cdd8ed">
  <NavigationButton visibility="collapsed"></NavigationButton>
  <GridLayout width="95%" columns="3*,*">
    <StackLayout orientation="horizontal" horizontalAlignment="left">
      <Image width="40" height="40" src="~/assets/back.png" stretch="aspectFit" (tap)="onBack()"></Image>
      <Label text="Add Info" class="text" fontWeight="Bold" fontSize="18" paddingLeft="32"
          verticalAlignment="center"></Label>
    </StackLayout>
  </GridLayout>
</ActionBar>

<GridLayout rows="*,auto" background="#FFFFFF">
  <ScrollView>
    <StackLayout padding="32">

      <GridLayout backgroundColor="#F0F4F8" borderRadius="8" borderColor="#E0E4E8" borderBottomWidth="2"
          height="48" marginBottom="8" (tap)="onAddPhone()">
        <Label class="text" text="Phone" fontSize="16" horizontalAlignment="center" verticalAlignment="center"></Label>
      </GridLayout>

      <GridLayout backgroundColor="#F0F4F8" borderRadius="8" borderColor="#E0E4E8" borderBottomWidth="2"
          height="48" marginBottom="8" (tap)="onAddEmail()">
        <Label class="text"text="Email" fontSize="16" horizontalAlignment="center" verticalAlignment="center"></Label>
      </GridLayout>

      <GridLayout backgroundColor="#F0F4F8" borderRadius="8" borderColor="#E0E4E8" borderBottomWidth="2"
          height="48" marginBottom="8" (tap)="onAddHome()">
        <Label class="text" text="Address" fontSize="16" horizontalAlignment="center" verticalAlignment="center"></Label>
      </GridLayout>

      <GridLayout backgroundColor="#F0F4F8" borderRadius="8" borderColor="#E0E4E8" borderBottomWidth="2"
          height="48" marginBottom="8" (tap)="onAddBusinessCard()">
        <Label class="text" text="Business Card" fontSize="16" horizontalAlignment="center" verticalAlignment="center"></Label>
      </GridLayout>

      <GridLayout backgroundColor="#F0F4F8" borderRadius="8" borderColor="#E0E4E8" borderBottomWidth="2"
          height="48" marginBottom="8" (tap)="onAddWebsite()">
        <Label class="text" text="Website" fontSize="16" horizontalAlignment="center" verticalAlignment="center"></Label>
      </GridLayout>

      <GridLayout backgroundColor="#F0F4F8" borderRadius="8" borderColor="#E0E4E8" borderBottomWidth="2"
          height="48" marginBottom="8" (tap)="onAddSocialLink()">
        <Label class="text" text="Social & Messaging" fontSize="16" horizontalAlignment="center" verticalAlignment="center"></Label>
      </GridLayout>

    </StackLayout>
  </ScrollView>

  <StackLayout row="1" paddingLeft="16" paddingRight="16" paddingBottom="32" paddingTop="16">
    <Label class="text" fontWeight="Bold" fontSize="15" text="Something Missing?"></Label>
    <Label textWrap="true" fontSize="15" (tap)="onRequest()">
      <FormattedString>
        <Span class="text" text="Please let us know what other information you'd like to include in your profile at "></Span>
        <Span class="link" text="requests@diatum.org"></Span>
      </FormattedString>
    </Label>
  </StackLayout>
</GridLayout>
