<ActionBar backgroundColor="#cdd8ed">
  <NavigationButton visibility="collapsed"></NavigationButton>
  <GridLayout width="95%" columns="3*,*">
    <StackLayout orientation="horizontal" horizontalAlignment="left">
      <Image width="40" height="40" src="~/assets/back.png" stretch="aspectFit" (tap)="onBack()"></Image>
      <Label text="About" class="text" fontWeight="Bold" fontSize="18" paddingLeft="32"
          verticalAlignment="center"></Label>
    </StackLayout>
  </GridLayout>
</ActionBar>

<GridLayout rows="*,auto" background="#FFFFFF">
  <ScrollView row="0">
    <StackLayout marginTop="16" borderColor="#DCE8FA" borderTopWidth="1">
      <Label class="text" text="About Us" fontWeight="Bold" fontSize="16" borderColor="#CDD8EA" borderBottomWidth="1"
          padding="16" (tap)="onAbout()"></Label>
      <Label class="text" text="Terms of Service" fontWeight="Bold" fontSize="16" borderColor="#CDD8EA" borderBottomWidth="1"
          padding="16" (tap)="onTerms()"></Label>
      <Label class="text" text="Data Policy" fontWeight="Bold" fontSize="16" borderColor="#CDD8EA" borderBottomWidth="1"
          padding="16" (tap)="onData()"></Label>
      <Label class="text" text="Take a Tour of Dikota" fontWeight="Bold" fontSize="16" borderColor="#CDD8EA" borderBottomWidth="1"
          padding="16" (tap)="onTour()"></Label>
      <Label class="text" text="Open Source Library" fontWeight="Bold" fontSize="16" borderColor="#CDD8EA" borderBottomWidth="1"
          padding="16" (tap)="onNotice()"></Label>
    </StackLayout>
  </ScrollView>
  <Label row="1" text="Version: {{ version }}" class="text" fontSize="12" horizontalAlignment="left" 
      paddingLeft="16" paddingBottom="16"></Label>
</GridLayout>

