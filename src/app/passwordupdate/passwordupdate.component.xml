<ActionBar *ngIf="iOS" backgroundColor="#CDD8ED" class="text" title="Password">
  <NavigationButton></NavigationButton>
</ActionBar>
<ActionBar *ngIf="!iOS" backgroundColor="#CDD8ED" class="text">
  <GridLayout columns="48,*,48" backgroundColor="#CDD8ED">
    <Image col="0" src="~/assets/iarrow.png" width="48" height="48" translateX="-16" (tap)="onBack()"></Image>
    <Label col="1" text="Password" fontWeight="Bold" fontSize="18" horizontalAlignment="left" verticalAlignment="center"
        paddingLeft="8"></Label>
    <Label *ngIf="!saved&&valid&&!busy" col="2" text="SAVE" class="link" fontSize="16" (tap)="onSave()" 
        verticalAlignment="center" paddingRight="8"></Label>
  </GridLayout>
</ActionBar>

<GridLayout background="#FFFFFF">
  <ScrollView>
    <StackLayout paddingLeft="32" paddingRight="32" paddingTop="16" paddingBottom="16">
      <ActivityIndicator color="#1172FE" [busy]="busy" width="32" height="32"></ActivityIndicator>
      <GridLayout rows="*,*,*" height="200">

        <Label *ngIf="current!=null&&current!=''" row="0" class="text" text="Current Password" fontSize="14" 
            horizontalAlignment="left" verticalAlignment="top" paddingTop="16"></Label>
        <TextField row="0" color="#51515E" style.placeholderColor="#A1A1AE" class="intput" autocorrect="false" hint="Current Password" fontSize="16" 
            secure="true" verticalAlignment="bottom" [text]="current" (textChange)="updateCurrent($event.value)"
            borderBottomWidth="1" borderColor="#DDDDDD"></TextField>
        <Image row="0" src="~/assets/clear.png" width="24" height="24" horizontalAlignment="right" verticalAlignment="bottom" 
            (tap)="clearCurrent()"></Image>

        <Label *ngIf="password!=null&&password!=''" row="1" class="text" text="New Password" fontSize="14" 
            horizontalAlignment="left" verticalAlignment="top" paddingTop="16"></Label>
        <TextField row="1" color="#51515E" style.placeholderColor="#A1A1AE" class="intput" autocorrect="false" hint="New Password" fontSize="16" 
            secure="true" verticalAlignment="bottom" [text]="password" (textChange)="updatePassword($event.value)"
            borderBottomWidth="1" borderColor="#DDDDDD"></TextField>
        <Image row="1" src="~/assets/clear.png" width="24" height="24" horizontalAlignment="right" verticalAlignment="bottom" 
            (tap)="clearPassword()"></Image>

        <Label *ngIf="match!=null&&match!=''" row="2" class="text" text="New Password Again" fontSize="14" 
            horizontalAlignment="left" verticalAlignment="top" paddingTop="16"></Label>
        <TextField row="2" style.placeholderColor="#A1A1AE" [color]="matchColor" class="intput" autocorrect="false" hint="New Password Again" 
            fontSize="16" secure="true" verticalAlignment="bottom" [text]="match" (textChange)="updateMatch($event.value)"
            borderBottomWidth="1" borderColor="#DDDDDD"></TextField>
        <Image row="2" src="~/assets/clear.png" width="24" height="24" horizontalAlignment="right" verticalAlignment="bottom" 
            (tap)="clearMatch()"></Image>

      </GridLayout>
      <StackLayout horizontalAlignment="center">
        <Label color="#888888" text="Must Contain:" fontSize="16" fontWeight="Bold"
            paddingTop="32" paddingBottom="8" textAlignment="center"></Label>
        <Label [color]="lowerColor" text="- Lower case character (abc)" fontSize="14"></Label>
        <Label [color]="upperColor" text="- Upper case character (ABC)" fontSize="14"></Label>
        <Label [color]="numColor" text="- Numeric character (123)" fontSize="14"></Label>
        <Label [color]="specialColor" text="- Special character (!@#$%)" fontSize="14"></Label>
        <Label [color]="countColor" text="- At least 8 characters" fontSize="14"></Label>
        <Label *ngIf="badChar" class="red" text="- No other characters" fontSize="14"></Label>
      </StackLayout>
    </StackLayout>
  </ScrollView>
</GridLayout>

