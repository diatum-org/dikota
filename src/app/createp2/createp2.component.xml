<ActionBar *ngIf="iOS" backgroundColor="#CDD8ED" class="text" title="Phone">
  <NavigationButton></NavigationButton>
</ActionBar>
<ActionBar *ngIf="!iOS" backgroundColor="#CDD8ED" class="text">
  <GridLayout columns="48,*,48" backgroundColor="#CDD8ED">
    <Image col="0" src="~/assets/iarrow.png" width="48" height="48" translateX="-4" (tap)="onBack()"></Image>
    <Label col="1" text="Phone" fontWeight="Bold" fontSize="18" horizontalAlignment="left" verticalAlignment="center"
        paddingLeft="8"></Label>
  </GridLayout>
</ActionBar>

<GridLayout background="#FFFFFF" [rows]="getScreenGrid()">
  <GridLayout rows="2*,auto,2*,5*" paddingLeft="32" paddingRight="32">
    <StackLayout *ngIf="phone!=null&&phone!=''" row="0" orientation="horizontal">
      <Label color="#909097" text="Phone" fontSize="16" verticalAlignment="bottom"></Label>
    </StackLayout>
    <StackLayout row="1">
      <TextField color="#51515E" style.placeholderColor="#A1A1AE" color="#51515E" style.placeholderColor="#A1A1AE" class="input" autocorrect="false" 
          hint="Phone" fontSize="16" keyboardType="phone" (focus)="onFocus()" (blur)="onBlur()" verticalAlignment="top" textWrap="true" [text]="phone" 
          (textChange)="onSetPhone($event.value)" borderBottomWidth="1" [borderColor]="phoneBorder"="2" marginBottom="2" paddingTop="4"></TextField>
      <GridLayout>
        <Label *ngIf="phoneBorder!='#DDDDDD'" color="#ED5A56" fontSize="12" text="(not available)" horizontalAlignment="right" 
            verticalAlignment="top" paddingRight="8"></Label>
        <Label *ngIf="e164!=null" color="#888888" fontSize="12" [text]="'Continue as: ' + e164" verticalAlignment="top" horizontalAlignment="left"></Label>
      </GridLayout>
    </StackLayout>
    <Label row="2" [color]="nextColor" text="NEXT" fontWeight="Bold" fontSize="16" paddingTop="32" 
        verticalAlignment="top" textAlignment="center" (tap)="onNext()"></Label>
    <Label row="3" class="link" text="Sign up with email" fontSize="16" paddingLeft="16" paddingRight="16"
        verticalAlignment="middle" textAlignment="center" (tap)="onEmail()"></Label>
  </GridLayout>
</GridLayout>
