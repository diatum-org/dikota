<ActionBar *ngIf="iOS" backgroundColor="#CDD8ED" class="text" title="Existing Identity">
  <NavigationButton></NavigationButton>
</ActionBar>
<ActionBar *ngIf="!iOS" backgroundColor="#CDD8ED" class="text">
  <GridLayout columns="48,*,48" backgroundColor="#CDD8ED">
    <Image col="0" src="~/assets/iarrow.png" width="48" height="48" translateX="-4" (tap)="onBack()"></Image>
    <Label col="1" text="Existing Identity" fontWeight="Bold" fontSize="16" horizontalAlignment="left"
        verticalAlignment="center" paddingLeft="8"></Label>
  </GridLayout>
</ActionBar>

<GridLayout rows="*,auto" backgroundColor="#FFFFFF">

  <StackLayout verticalAlignment="top" paddingLeft="16" paddingRight="16" paddingTop="32">
    <ActivityIndicator color="#1172FE" [busy]="busy" width="32" height="32" paddingBottom="16"></ActivityIndicator>

    <GridLayout rows="auto" paddingBottom="16">
      <Image src="~/assets/login.png" height="28" width="28" horizontalAlignment="left" verticalAlignment="center"></Image>
      <TextField #lgn color="#51512E" style.placeholderColor="#A1A1AE" class="input" autocorrect="false" hint="Username"
          autocapitalizationType="none" fontSize="16" paddingLeft="32" (textChange)="onUpdateUsername($event.value)" returnKeyType="next"
          borderBottomWidth="1" borderColor="#DDDDDD"></TextField>
    </GridLayout>    
    <GridLayout rows="auto" paddingBottom="16">
      <Image src="~/assets/password.png" height="28" width="28" horizontalAlignment="left" verticalAlignment="center"></Image>
      <TextField #pas color="#51515E" style.placeholderColor="#A1A1AE" class="input" autocorrect="false" hint="Access Code" 
          autocapitalizationType="none" fontSize="16" paddingLeft="32" (textChange)="onUpdateCode($event.value)" returnKeyType="next"
          borderBottomWidth="1" borderColor="#DDDDDD"></TextField>
    </GridLayout>
    <Label fontSize="16" fontWeight="Bold" text="CONNECT" textAlignment="center" [color]="connectColor" (tap)="onConnect()"></Label>
  </StackLayout>

  <Label row="1" class="link" fontSize="16" text="Choose new identity instead" textAlignment="center" paddingBottom="16" (tap)="onCreate()"></Label>

</GridLayout>
