<ActionBar *ngIf="iOS" backgroundColor="#CDD8ED" class="text" title="Settings & Privacy">
  <NavigationButton></NavigationButton>
</ActionBar>
<ActionBar *ngIf="!iOS" backgroundColor="#CDD8ED" class="text">
  <GridLayout columns="48,*,48" backgroundColor="#CDD8ED">
    <Image col="0" src="~/assets/iarrow.png" width="48" height="48" translateX="-16" (tap)="onBack()"></Image>
    <Label col="1" text="Settings & Privacy" fontWeight="Bold" fontSize="18" horizontalAlignment="left" verticalAlignment="center"
        paddingLeft="8"></Label>
  </GridLayout>
</ActionBar>

<GridLayout background="#FFFFFF">
  <ScrollView>
    <StackLayout marginTop="16" borderColor="#DCE8FA" borderTopWidth="1">
      <Label class="text" text="Overview" fontWeight="Bold" fontSize="16" borderColor="#CDD8EA" 
          borderBottomWidth="1" padding="16" (tap)="onOverview()"></Label>
      <Label class="text" text="Privacy Controls" fontWeight="Bold" fontSize="16" borderColor="#CDD8EA" 
          borderBottomWidth="1" padding="16" (tap)="onPrivacyControls()"></Label>
      <Label class="text" text="Permissions" fontWeight="Bold" fontSize="16" borderColor="#CDD8EA" 
          borderBottomWidth="1" padding="16" (tap)="onPermissions()"></Label>
      <Label class="text" text="Data Collection" fontWeight="Bold" fontSize="16" borderColor="#CDD8EA" 
          borderBottomWidth="1" padding="16" (tap)="onCollection()"></Label>
    </StackLayout>
  </ScrollView>
</GridLayout>

